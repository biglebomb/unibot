{
  "name": "unibot",
  "version": "0.1.0",
  "description": "TypeScript-first SDK for building multi-channel chatbots (Telegram + Discord)",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src tests examples --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\""
  },
  "keywords": [
    "bot",
    "chatbot",
    "telegram",
    "discord",
    "multi-channel",
    "sdk"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "bun@1.0.0",
  "workspaces": [
    "examples/*"
  ],
  "dependencies": {
    "discord.js": "^14.14.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}

